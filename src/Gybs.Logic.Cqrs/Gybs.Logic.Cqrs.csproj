  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PackageReference Include="Gybs.Logic.Operations" Version="[0.100.1, 1.0)" />
  </ItemGroup>

</Project>